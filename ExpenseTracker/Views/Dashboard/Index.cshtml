@{
    List<Categories> categories = ViewBag.Categories;
    List<Expenses> expenses = ViewBag.Expenses;

}

<div class="row mb-4">
    <div class="d-flex flex-row widget summary expense">
        <div class="d-flex flex-column justify-content-center p-5">
            <i class="fa-solid fa-rupee-sign fa-2xl"></i>
        </div>
        <div class="d-flex flex-column m-auto py-3">
            <span class="lead">Total Expense</span>
            <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
        </div>
    <div class="d-flex flex-row widget summary category">
        <div class="d-flex flex-column justify-content-center p-5">
            <i class="fa-solid fa-rupee-sign fa-2xl"></i>
        </div>
    <div class="d-flex flex-column m-auto py-3">
         <span class="lead">Total category limit</span>
            <h1 class="display-6 fw-bold">@categories.Sum(s=>s.Categoryexpenselimit)</h1>
          </div>
        </div>
    </div>
    <table>
        <tr>
            <th>Category Name</th>
            @*<th>Category Total</th>*@
        </tr>
        @foreach (var category in categories)
        {
            <tr>
               
                <td><a href="@Url.Action("IndexByCategory", "Expenses",new { id=category.CategoryId })">@category.CategoryName</a></td>
                
            </tr>

        }
    </table>
</div>




